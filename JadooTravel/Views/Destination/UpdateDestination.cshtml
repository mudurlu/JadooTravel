@model GetDestinationDto
@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container">
    <br /><br />
    <form method="post">
        <input type="hidden" asp-for="DestinationId" />
        <input type="text" asp-for="CityCountry" placeholder="Şehir ve Ülke Giriniz" class="form-control" />
        <br />
        <input type="text" asp-for="ImageUrl" placeholder="Fotoğraf Linki Giriniz" class="form-control" />
        <br />
        <input type="text" asp-for="Price" placeholder="Fiyat Giriniz" class="form-control" />
        <br />
        <input type="text" asp-for="DayNight" placeholder="Gün-Gece Giriniz" class="form-control" />
        <br />
        <input type="text" asp-for="Capacity" placeholder="Kapasite Giriniz" class="form-control" />
        <br />
        <textarea asp-for="Description" placeholder="Tur Açıklaması Giriniz" class="form-control" rows="3"></textarea>
        <br />
        <button class="btn btn-primary">Tur Ekle</button>
    </form>
</div>